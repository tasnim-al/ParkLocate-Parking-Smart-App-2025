<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/slot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="367dp"
        android:layout_height="145dp"
        android:layout_marginBottom="12dp"
        android:text="Choose Parking Slot"
        android:textColor="#b0b0b0"
        android:textSize="44sp"
        android:textStyle="bold" />
    <GridLayout
        android:layout_width="386dp"
        android:layout_height="535dp"
        android:layout_weight="1"
        android:columnCount="3"
        android:rowCount="4">
        <Button
            android:id="@+id/butSlotA1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#16A34A"
            android:text="A1"
            android:textSize="19sp"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/butSlotA2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#DC2626"
            android:text="A2"
            android:textSize="19sp"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/butSlotA3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#16A34A"
            android:text="A3"
            android:textSize="19sp"
            android:textColor="#FFFFFF" />
    </GridLayout>
    <Button
        android:id="@+id/btnContinueSlot"
        android:layout_width="354dp"
        android:layout_height="86dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6c8ae4"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</LinearLayout>

