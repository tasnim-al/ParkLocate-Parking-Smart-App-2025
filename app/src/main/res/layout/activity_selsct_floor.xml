<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/floor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="378dp"
        android:layout_height="215dp"
        android:layout_marginBottom="20dp"
        android:text="Select Floor"
        android:textColor="#111827"
        android:textSize="45sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/butFloor1"
            android:layout_width="309dp"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#DC2626"
            android:text="Floor 1 - Full"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btnFloor2"
            android:layout_width="313dp"
            android:layout_height="75dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#16A34A"
            android:text="Floor 2 - Available"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btnFloor3"
            android:layout_width="313dp"
            android:layout_height="72dp"
            android:backgroundTint="#16A34A"
            android:text="Floor 3 - Available"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>

