<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info_page"
    android:orientation="vertical"
    android:background="@drawable/info"
    android:padding="30dp"
    android:gravity="center">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:padding="25dp"
        android:text="What does ParkLocate offer?"
        android:textColor="#050E3C"
        android:textSize="45sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="329dp"
        android:layout_height="135dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:padding="24dp"
        android:text="Helps you find the nearest parking slot easily and fast."
        android:textColor="#7C7A7A"
        android:textSize="25sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#6c8ae4"
        android:padding="20dp"
        android:text="Next"
        android:textColor="#050E3C"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>